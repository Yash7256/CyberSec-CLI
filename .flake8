[flake8]
max-line-length = 120
ignore = 
    W503,  # line break before binary operator (conflicts with Black)
    E501,  # line too long (handled by Black)
    F541,  # f-string without placeholders (minor style preference)
per-file-ignores =
    */tests/*:F841  # unused variables in tests are OK
    */examples/*:F841
exclude = .git,__pycache__,.venv,venv,build,dist
