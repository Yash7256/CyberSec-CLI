# OpenAI API (Required for AI features)
OPENAI_API_KEY=sk-your-api-key-here

# Database Configuration
DATABASE_URL=postgresql://cybersec:password@localhost:5432/cybersec

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
ENABLE_REDIS=true

# Web Interface
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_WORKERS=4

# Security
WEBSOCKET_API_KEY=your-secure-api-key-here
SECRET_KEY=your-secret-key-here

# Rate Limiting
RATE_LIMIT_ENABLED=true
CLIENT_RATE_LIMIT=10
TARGET_RATE_LIMIT=50
GLOBAL_RATE_LIMIT=1000

# Scanning Configuration
ADAPTIVE_SCANNING=true
DEFAULT_TIMEOUT=3.0
MAX_CONCURRENCY=100

# UI Theme
CYBERSEC_THEME=matrix

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# UI settings
UI_SHOW_BANNER=true
UI_COLOR_OUTPUT=true
SCAN_DEFAULT_TIMEOUT=2
SCAN_MAX_THREADS=50
SCAN_RATE_LIMIT=10
OUTPUT_DEFAULT_FORMAT=table
OUTPUT_SAVE_RESULTS=true
OUTPUT_EXPORT_PATH=/app/reports/
SECURITY_REQUIRE_CONFIRMATION=true
SECURITY_LOG_ALL_COMMANDS=true
SECURITY_ENCRYPT_STORED_DATA=true