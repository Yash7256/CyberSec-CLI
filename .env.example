# =====================================================
# CyberSec-CLI Environment Configuration
# =====================================================
# Copy this file to .env and update with your values

# =====================================================
# OpenAI API Configuration (OPTIONAL)
# =====================================================
# Leave empty or commented out to use built-in rule-based analysis
# Get API key: https://platform.openai.com/account/api-keys
# OPENAI_API_KEY=sk-your_api_key_here

# OpenAI Model Configuration (ignored if API key is empty)
# AI_PROVIDER=openai
# AI_MODEL=gpt-4
# AI_TEMPERATURE=0.7
# AI_MAX_TOKENS=2000

# =====================================================
# UI Configuration
# =====================================================
# Theme options: matrix, cyberpunk, minimal
CYBERSEC_THEME=matrix

# Show banner on startup
UI_SHOW_BANNER=true

# Enable colored output
UI_COLOR_OUTPUT=true

# Animation speed: slow, normal, fast, off
UI_ANIMATION_SPEED=normal

# =====================================================
# Scanning Configuration
# =====================================================
# Default timeout for port connections (seconds)
SCAN_DEFAULT_TIMEOUT=2

# Maximum number of concurrent scanning threads
SCAN_MAX_THREADS=50

# Rate limit for requests per second
SCAN_RATE_LIMIT=10

# Enable adaptive concurrency control (automatically adjusts scanning speed based on network performance)
SCAN_ADAPTIVE_SCANNING=true

# =====================================================
# Output Configuration
# =====================================================
# Default output format: table, json, csv, markdown
OUTPUT_DEFAULT_FORMAT=table

# Save scan results automatically
OUTPUT_SAVE_RESULTS=true

# Path to save reports (relative to application directory)
OUTPUT_EXPORT_PATH=./reports/

# =====================================================
# Security Configuration
# =====================================================
# Require confirmation before executing dangerous commands
SECURITY_REQUIRE_CONFIRMATION=true

# Log all commands executed
SECURITY_LOG_ALL_COMMANDS=true

# Encrypt sensitive data at rest
SECURITY_ENCRYPT_STORED_DATA=true

# =====================================================
# Database Configuration
# =====================================================
# Database URL (optional, uses SQLite by default)
# DATABASE_URL=postgresql://user:password@localhost:5432/cybersec

# =====================================================
# Logging Configuration
# =====================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=./logs/cybersec.log

# =====================================================
# Email Configuration (Optional, for notifications)
# =====================================================
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=admin@example.com

# =====================================================
# Proxy Configuration (Optional)
# =====================================================
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# =====================================================
# Advanced Configuration
# =====================================================
# Enable debug mode for verbose logging
DEBUG=false

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Maximum number of workers for async operations
MAX_WORKERS=4

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# =====================================================
# Docker-Specific Configuration
# =====================================================
# Set this to true when running in Docker
RUNNING_IN_DOCKER=false

# =====================================================
# Notes
# =====================================================
# 1. Replace all placeholder values with your actual configuration
# 2. Keep this file secure - it contains sensitive information
# 3. Never commit .env to version control
# 4. Use strong, randomly generated API keys
# 5. Regularly rotate your credentials
# 6. For production, use a secrets management system (Vault, AWS Secrets Manager, etc.)
